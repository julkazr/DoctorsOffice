@model DoctorsOffice.ViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<h2 class="dark-text">@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4 class="dark-text">Send verification code</h4>
    <hr />
    <div class="row dark-text">
        <div class="col-md-8">
            Select Two-Factor Authentication Provider:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <button type="submit" value="Submit" class="btn btn-default dark-blue-bckg light-text">Submit</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
