@model DoctorsOffice.Data.Examination

@{
    ViewBag.Title = "Create";
}

<h2 class="dark-text">Create new examination</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="container-fluid">
        <h4 class="dark-text">Examination</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form>
            <div class="row">
                <div class="form-group col-md-6 dark-text">
                    @Html.LabelFor(model => model.PatientID, "PatientID", htmlAttributes: new { @class = "control-label col-md-2 text-bold" })
                    <div class="col-md-10">
                        @Html.DropDownList("PatientID", null, htmlAttributes: new { @class = "form-control input-fields" })
                        @Html.ValidationMessageFor(model => model.PatientID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6 dark-text">
                    @Html.LabelFor(model => model.DateOfVisit, htmlAttributes: new { @class = "control-label col-md-2 text-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DateOfVisit, new { htmlAttributes = new { @class = "form-control input-fields" } })
                        @Html.ValidationMessageFor(model => model.DateOfVisit, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 dark-text">
                    @Html.LabelFor(model => model.DoctorID, "DoctorID", htmlAttributes: new { @class = "control-label col-md-2 text-bold" })
                    <div class="col-md-10">
                        @Html.DropDownList("DoctorID", null, htmlAttributes: new { @class = "form-control input-fields" })
                        @Html.ValidationMessageFor(model => model.DoctorID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6 dark-text">
                    @Html.LabelFor(model => model.DiagnoseCode, htmlAttributes: new { @class = "control-label col-md-2 text-bold" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiagnoseCode, new { htmlAttributes = new { @class = "form-control input-fields" } })
                        @Html.ValidationMessageFor(model => model.DiagnoseCode, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col dark-text">
                    @Html.LabelFor(model => model.LabResults, htmlAttributes: new { @class = "control-label col-md-2 text-bold" })
                    <div class="col">
                        @Html.TextAreaFor(model => model.LabResults,  new { @class = "form-control input-fields", @rows = 10 } )
                        @Html.ValidationMessageFor(model => model.LabResults, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col dark-text">
                    @Html.LabelFor(model => model.ExamResults, htmlAttributes: new { @class = "control-label col-md-2 text-bold" })
                    <div class="col">
                        @Html.TextAreaFor(model => model.ExamResults, new { @class = "form-control input-fields", @rows = 20 } )
                        @Html.ValidationMessageFor(model => model.ExamResults, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group dark-text">
                <button type="submit" value="Create" class="btn btn-default dark-blue-bckg light-text">Create</button>   |
                <button class="btn btn-default dark-blue-bckg light-text">Print</button>
                <strong class="back-link">   |  @Html.ActionLink("Back to List", "Index")</strong>
            </div>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
