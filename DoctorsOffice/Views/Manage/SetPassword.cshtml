@model DoctorsOffice.ViewModels.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<h2 class="dark-text">@ViewBag.Title.</h2>
<p class="text-info dark-text">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4 class="dark-text">Create Local Login</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group dark-text">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-fields" })
        </div>
    </div>
    <div class="form-group dark-text">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-fields" })
        </div>
    </div>
    <div class="form-group dark-text">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" value="Set password" class="btn btn-default dark-blue-bckg light-text">Set password</button>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}