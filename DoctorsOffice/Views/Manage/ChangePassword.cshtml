@model DoctorsOffice.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2 class="dark-text">@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="dark-text">Change Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group dark-text">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-fields" })
        </div>
    </div>
    <div class="form-group dark-text">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-fields" })
        </div>
    </div>
    <div class="form-group dark-text">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-fields" })
        </div>
    </div>
    <div class="form-group dark-text">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" value="Change password" class="btn btn-default dark-blue-bckg light-text">Change password</button>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}